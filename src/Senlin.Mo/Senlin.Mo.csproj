<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>12</LangVersion>
        <MoLocalizationFile>mo-l.json</MoLocalizationFile>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Senlin.Mo.Localization.Abstractions\Senlin.Mo.Localization.Abstractions.csproj"/>
        <ProjectReference Include="..\Senlin.Mo.Localization\Senlin.Mo.Localization.csproj"
                          OutputItemType="Analyzer"
                          ReferenceOutputAssembly="false"
        />
    </ItemGroup>

    <ItemGroup>
        <CompilerVisibleProperty Include="MoLocalizationFile"/>
    </ItemGroup>

    <ItemGroup>
        <AdditionalFiles Include="mo-l.json" MoLocalizationFile="l0.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </AdditionalFiles>
    </ItemGroup>

    <ItemGroup>
        <None Update="L\*.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>
</Project>
